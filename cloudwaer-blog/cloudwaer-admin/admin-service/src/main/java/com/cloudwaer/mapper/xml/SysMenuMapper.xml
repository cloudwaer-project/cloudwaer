        modify_by, created, last_update_time
    </sql>


    <select id="selectMenuByUserId" resultType="com.cloudwaer.domain.SysMenu">
        select
        sys_menu.id,
        sys_menu.parent_id,
        sys_menu.parent_key,
        sys_menu.`type`,
        sys_menu.`name`,
        sys_menu.`desc`,
        sys_menu.target_url,
        sys_menu.sort,
        sys_menu.`status`,
        sys_menu.create_by,
        sys_menu.modify_by,
        sys_menu.created,
        sys_menu.last_update_time
        from  sys_user_role
        left join sys_role_menu
        on sys_user_role.role_id=sys_role_menu.role_id
        left join sys_menu
        on sys_menu.id=sys_role_menu.menu_id
        where sys_user_role.user_id=#{userId}
    </select>
